<Window x:Class="Memento.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memento"
        mc:Ignorable="d"
        Title="About Developers" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock Text=" Our Team" FontSize="30" />
        <Image Grid.Row="1" Source="Images/team.png" />
        <Button Grid.Row="2" Content="Close" Height="20" Width="75" HorizontalAlignment="Left" Margin="298,15,0,15" 
                RenderTransformOrigin="0.667,0.616" Click="Close_Click" />

    </Grid>
</Window>

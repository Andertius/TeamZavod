<Window x:Class="Memento.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memento"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="About Developers" Height="562" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock Text="Me and the boys" FontSize="30" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <Image Grid.Row="1" x:Name="Img">
            <Image.Source>
                <BitmapImage UriSource="team.png"/>
            </Image.Source>
        </Image>
        <Button Grid.Row="2" Content="Close" Height="20" Width="75" HorizontalAlignment="Right" Margin="0,0,40,0" 
                RenderTransformOrigin="0.667,0.616" Click="Close_Click"
                VerticalAlignment="Center" />

    </Grid>
</Window>
